@model RecipeManagerCoreMVC.ViewModels.UserClaimsViewModel;
@{
    ViewData["Title"] = "Manage User Claims";
}

<h1>Manage User Claims</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model.Claims[i].ClaimType" hidden />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
