@model List<RecipeManagerCoreMVC.ViewModels.UserRolesViewModel>;
@{
    ViewData["Title"] = "Manage User Roles";
    var userId = ViewBag.userId;
}

<h1>Manage User Roles</h1>

<form method="post" asp-controller="Administration" asp-action="ManageUserRoles" asp-route-userId="@Context.Request.Query["userId"]">
    <div class="card">
        <h2>Manage User Roles</h2>
    </div>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
            </div>
        }
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    <div class="card-footer">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Cancel</a>
    </div>
</form>