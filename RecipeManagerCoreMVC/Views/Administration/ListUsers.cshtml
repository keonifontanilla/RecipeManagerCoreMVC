@model IEnumerable<IdentityUser>;
@{
    ViewData["Title"] = "List Users";
}

<h1>List Users</h1>

@if (Model.Any())
{
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary mb-3">Create User</a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <span id="confirmDeleteSpan_@user.Id" style="display: none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@user.Id', false)">No</a>
                    </span>
                    <span id="deleteSpan_@user.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@user.Id', true)">Delete</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Users
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Create User</a>
        </div>
    </div>
}