@using Microsoft.AspNetCore.Identity;
@using RecipeManagerCoreMVC.Data;
@inject UserManager<ApplicationUser> UserManager;
@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="bg-black">
    <div class="recipeType-div">
        <h4 class="recipeType-bg-gold">Welcome</h4>
    </div>
</div>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Profile</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a asp-controller="Profile" asp-action="Details" asp-route-userName="@ViewBag.UserName" class="nav-link">About Me <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a asp-controller="Profile" asp-action="Recipes" asp-route-userName="@ViewBag.UserName" class="nav-link">My Recipes</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Profile" asp-action="Articles" asp-route-userName="@ViewBag.UserName" class="nav-link">My Articles</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Profile" asp-action="Favorites" asp-route-userName="@ViewBag.UserName" class="nav-link">My Favorites</a>
            </li>
        </ul>
    </div>
</nav>
<div>
    @RenderBody()
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}